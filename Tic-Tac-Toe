    public void btnClick(JButton b, int row, int line) {
        if (turn % 2 != 0) { // whose turn? Player 1
            b.setText("╳");
            playField[row][line] = player1Mark; // mark the space
            if (whoWins() == 0) {
                if (turn != 9) {
                    lblNotice.setText("Player 2's turn");
                } else {
                    lblNotice.setText("A draw!");
                }
            } else {
                lblNotice.setText("Player 1 has won");
                unenableAll(btn);
            }
            turn++;
        } else { // Player 2
            b.setText("◯");
            playField[row][line] = player2Mark;
            if (whoWins() == 0) {
                lblNotice.setText("Player 1's turn");
            } else {
                lblNotice.setText("Player 2 has won");
                unenableAll(btn);
            }
            turn++;
        }
        b.setEnabled(false);
    }

    public int whoWins() {
        ArrayList<String> combiList = new ArrayList<>();
        String combi = "";
        final String player1Wins = "xxx";
        final String player2Wins = "ooo";
        for (String[] playField1 : playField) {
            for (String item : playField1) {
                combi = combi + item;
            }
            combiList.add(combi);
            combi = "";
        }
        for (int i = 0; i < playField.length && i < playField[i].length; i++) {
            for (String[] playField1 : playField) {
                combi = combi + playField1[i];
            }
            combiList.add(combi);
            combi = "";
        }
        combi = playField[0][0] + playField[1][1] + playField[2][2];
        combiList.add(combi);
        combi = playField[2][0] + playField[1][1] + playField[0][2];
        combiList.add(combi);

        if (combiList.contains(player1Wins)
                || combiList.contains(player2Wins)) {
            return 1;
        } else {
            return 0;
        }
    }

    public void reload() {
        turn = 1;

        for (String[] playField1 : playField) {
            for (int j = 0; j < playField1.length; j++) {
                playField1[j] = "";
            }
        }

        lblNotice.setText("Player 1's turn");

        for (int i = 0; i < btn.size(); i++) {
            btn.get(i).setText("    ");;
            btn.get(i).setEnabled(true);
        }
    }

    public void unenableAll(List<JButton> arr) {
        for (int i = 0; i < btn.size(); i++) {
            btn.get(i).setEnabled(false);
        }
    }
}
